<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image_product_cart"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_product_name_cart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Nome do produto"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/text_item_total_cart"
        app:layout_constraintEnd_toStartOf="@+id/edit_item_qty_cart"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image_product_cart"
        app:layout_constraintTop_toTopOf="@+id/image_product_cart"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/text_item_total_cart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="R$ 0,00"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/image_product_cart"
        app:layout_constraintEnd_toEndOf="@+id/text_product_name_cart"
        app:layout_constraintStart_toStartOf="@+id/text_product_name_cart"
        app:layout_constraintTop_toBottomOf="@+id/text_product_name_cart" />

    <ImageButton
        android:id="@+id/button_remove_from_cart"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_trash" />

    <EditText
        android:id="@+id/edit_item_qty_cart"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="number"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/button_remove_from_cart"
        app:layout_constraintEnd_toStartOf="@+id/button_remove_from_cart"
        app:layout_constraintTop_toTopOf="@+id/button_remove_from_cart"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/button_cart_qty_add"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@+id/edit_item_qty_cart"
        app:layout_constraintEnd_toEndOf="@+id/edit_item_qty_cart"
        app:layout_constraintStart_toStartOf="@+id/edit_item_qty_cart"
        app:srcCompat="@drawable/ic_plus"
        app:tint="?android:attr/colorForeground" />

    <ImageButton
        android:id="@+id/button_cart_qty_sub"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="@+id/edit_item_qty_cart"
        app:layout_constraintStart_toStartOf="@+id/edit_item_qty_cart"
        app:layout_constraintTop_toBottomOf="@+id/edit_item_qty_cart"
        app:srcCompat="@drawable/ic_minus"
        app:tint="?android:attr/colorForeground" />

</androidx.constraintlayout.widget.ConstraintLayout>