<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/bg_adapter_product_search">

    <ImageView
        android:id="@+id/image_product_search"
        android:layout_width="@dimen/productSearchImageSize"
        android:layout_height="@dimen/productSearchImageSize"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/text_product_name_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        android:text="NVIDIA Geforce RTX 3060 Ti"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/image_product_search"
        app:layout_constraintStart_toStartOf="@+id/image_product_search"
        app:layout_constraintTop_toBottomOf="@+id/image_product_search" />

    <TextView
        android:id="@+id/text_item_price_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        android:text="R$ 0,00"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_product_name_search"
        app:layout_constraintStart_toStartOf="@+id/text_product_name_search"
        app:layout_constraintTop_toBottomOf="@+id/text_product_name_search" />

</androidx.constraintlayout.widget.ConstraintLayout>